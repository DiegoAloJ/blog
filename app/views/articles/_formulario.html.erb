<div class="container-fluid">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="jumbotron space-a">
				<form>
					<fieldset>
						<legend class="text-center space-title"><%= "#{titulo} articulo" %></legend>
						<%= form_with(model: article) do |form| %>	
							<div class="form-group row">
								<%= form.label "Título:", class:"col-md-4 col-form-label" %>
								<%= form.text_field :title, class:"col-md-6 form-control" %>
							</div>
							<div class="form-group row">
								<%= form.label "Cuerpo:", class:"col-md-4 col-form-label" %>
								<%= form.text_area :body, class:"col-md-6 form-control" %>
							</div> 
							<div class="form-group">
								<%= form.submit "Aceptar", class:"btn btn-info" %>
								<%= link_to "Atrás", root_path, class:"btn btn-info" %>
							</div>
						<% end%>
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>